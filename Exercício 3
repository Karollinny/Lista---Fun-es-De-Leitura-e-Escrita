def valorSoma(numero1, numero2):
   return numero1 + numero2

def valorSubtracao(numero1, numero2):
   return numero1 - numero2 

def valorMultiplicacao(numero1, numero2):
   return numero1 * numero2

def valorDivisao(numero1, numero2):
    return numero1 / numero2

numero1 = int(input("Digite o primeiro número:"))
numero2 = int(input("Digite o segundo número:"))

soma = valorSoma(numero1, numero2)
subtracao = valorSubtracao(numero1, numero2)
multiplicacao = valorMultiplicacao(numero1, numero2)
divisao = valorDivisao(numero1, numero2)

print("O resultado da operação da soma é:", soma)
print("O resultado da operação da subtração é:", subtracao)
print("O resultado da operação da multiplicação é:", multiplicacao)
print("O resultado da operação da divisão é:", divisao)
